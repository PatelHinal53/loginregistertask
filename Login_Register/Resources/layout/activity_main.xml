<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout 
        android:orientation="vertical" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" 
        android:id="@+id/linearLayout1" 
        android:layout_marginLeft="40dp" 
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="50dp"
            android:layout_marginLeft="40dp" 
            android:layout_marginTop="60dp"
            android:shadowColor="#36EEE0" 
            android:textStyle="bold"/>

        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:id="@+id/linearLayout2">

        <TextView 
                android:layout_height="wrap_content" 
                android:layout_width="wrap_content" 
                android:id="@+id/textView3" 
                android:text="Don't have an account?"/>
        <TextView 
                android:layout_height="wrap_content" 
                android:layout_width="wrap_content" 
                android:id="@+id/textView4" 
                android:layout_marginLeft="5dp" 
                android:text="Create your account" 
                android:textColor="#FD49A0"/>

</LinearLayout>

</LinearLayout>

    <LinearLayout 
        android:orientation="vertical" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" 
        android:id="@+id/linearLayout3" 
        android:layout_marginLeft="40dp" 
        android:layout_marginTop="80dp" 
        android:layout_marginRight="40dp">

        <EditText 
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:id="@+id/loginUser" 
            android:background="@drawable/shape" 
            android:gravity="center" 
            android:drawableLeft="@drawable/ic_user" 
            android:hint="Enter Username"/>

        <EditText 
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:id="@+id/passwordUser" 
            android:layout_marginTop="30dp" 
            android:background="@drawable/shape" 
            android:gravity="center" 
            android:drawableLeft="@drawable/ic_password" 
            android:hint="Enter Password"/>

        <TextView 
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content" 
            android:id="@+id/forgotpass" 
            android:layout_marginLeft="5dp" 
            android:layout_marginTop="20dp" 
            android:text="Forgot Password?" 
            android:layout_marginRight="20dp" 
            android:layout_gravity="right"/>

    </LinearLayout>


    <LinearLayout 
        android:orientation="vertical" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" 
        android:id="@+id/linearLayout4" 
        android:layout_marginTop="20dp" 
        android:gravity="center" 
        android:padding="30dp">

        <com.google.android.material.button.MaterialButton 
            android:layout_height="wrap_content" 
            android:layout_width="203.0dp" 
            android:id="@+id/loginBtn" 
            android:text="Login" 
            app:cornerRadius="50dp" 
            android:backgroundTint="@color/navyblue"/>

        <com.google.android.material.button.MaterialButton 
            android:layout_height="wrap_content" 
            android:layout_width="203.0dp" 
            android:id="@+id/registerBtn" 
            android:text="Register" 
            app:cornerRadius="50dp" 
            android:backgroundTint="@color/navyblue"/>

    </LinearLayout>


        <LinearLayout 
        android:orientation="vertical" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" 
        android:id="@+id/linearLayout5" 
        android:gravity="center">

            <TextView 
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content" 
            android:id="@+id/orlogin" 
            android:text="Or Login with" 
            android:layout_gravity="center"/>


            <LinearLayout 
            android:orientation="horizontal" 
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:gravity="center">

                <ImageView 
                    android:layout_height="46.0dp" 
                    android:layout_width="65.0dp" 
                    android:id="@+id/facebook" 
                    android:src="@drawable/a2"/>

                <ImageView 
                    android:layout_height="64.0dp" 
                    android:layout_width="65.0dp" 
                    android:id="@+id/google" 
                    android:src="@drawable/a1"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
        


